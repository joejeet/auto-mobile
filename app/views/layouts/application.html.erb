<!DOCTYPE html>
<html>
<head>
  <title>Fleet Influence</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "jquery", "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? && current_user.is_admin %>
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container ">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Fleet Influence</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Manufacturers", manufacturers_path %></li>
            <li><%= link_to "Models", make_models_path %></li>
            <li><%= link_to "Service Plans", service_plans_path %></li>
            <li><%= link_to "Parts", parts_path %></li>
            <li><%= link_to "Part Descriptions", part_descriptions_path %></li>
            <li><%= link_to "Upload Data", uploads_path %></li>
            <li><%= link_to "Customers", companies_path %></li>
          </ul>
           <ul class="nav pull-right">
           <div class="btn btn-warning">
           <i class="icon-user icon-black"></i>
             <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.username %>
              <span class="caret"></span>
               </a>
               <ul class="dropdown-menu">
                 <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete  %> </li>
                 <li> <%= link_to "Profile", edit_user_registration_path, :method => :get  %> </li>
               </ul>
          </ul>
         </div>
      </div>
    </div>
  </div>

<% elsif user_signed_in?  && current_user.user_type_id == 1 %>

  <%= render '/layouts/maintenance_user' %> 


<% elsif user_signed_in? && current_user.user_type_id == 2 %>

  <%= render '/layouts/full_user' %> 

  <%= render '/layouts/welcome' %>

  <%= render '/layouts/logout' %>

<% end %>
    <div class="main-content content-border">

    
   <%= yield %>
    </div>
<script type="text/javascript"> $(function() { show_welcome_modal(); }); </script>   
</body>
</html>

            
